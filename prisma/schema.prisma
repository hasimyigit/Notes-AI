generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Note {
  id          String   @id @default(cuid()) @map("_id")
  title       String
  description String
  createdAt   DateTime @default(now())
  categoryId  String
  userId      String 
  cat         Category @relation(fields: [categoryId], references: [id],onDelete: Cascade)
}

model Category {
  id   String @id @default(cuid()) @map("_id")
  name String
   userId      String
  note Note[]
  
}
